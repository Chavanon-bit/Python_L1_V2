];

// ----------------------
// Task 1
// ----------------------
console.log(wizards);

var  totalPoints = 0;

// ----------------------
// Task 2
// ----------------------
wizards.forEach(i => {
  i.events.forEach(j => {
    totalPoints += j;
  });

  i['totalPoints'] = totalPoints; 
  // console.log(i)
  totalPoints = 0;

});

console.log(wizards)


// ----------------------
