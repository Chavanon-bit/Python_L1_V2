  const houses = {
       Gryffindor: { total: 0, count: 0 },
       Slytherin: { total: 0, count: 0 },
       Ravenclaw: { total: 0, count: 0 },
       Hufflepuff: { total: 0, count: 0 },
 };

var total = 0;
var count = 0; 

wizards.forEach(i => {
  houses[i.house].total += i.totalPoints;
  houses[i.house].count += 1;
});

console.log(houses)

